post_install() {
  MINGW_PREFIX=/mingw64
  WIN_PREFIX=$(cygpath -m ${MINGW_PREFIX})
  sed -s "s|${MINGW_PREFIX}|${WIN_PREFIX}|g" \
    -i ${MINGW_PREFIX}/etc/luarocks/config-5.1.lua

  MINGW_LUA_PATH=/mingw64/share/lua/5.1/
  WIN_LUA_PATH=$(cygpath -m ${MINGW_LUA_PATH})
  sed -s "s|${MINGW_LUA_PATH}|${WIN_LUA_PATH}|g" \
    -i ${MINGW_PREFIX}/bin/luarocks*
}

post_upgrade() {
  post_install
}
